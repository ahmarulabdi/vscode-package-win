{
    // Paths

    "Path-elixir": {
		"prefix": "lv:elixir",
		"body": [
			"{{ elixir('${1:file}') }}$2"
		],
		"description": "Laravel Path-elixir"
	},

	"Path-mix": {
		"prefix": "lv:mix",
		"body": [
			"{{ mix('${1:file}') }}$2"
		],
		"description": "Laravel Path-mix"
	},

    // Strings

    "String-trans": {
		"prefix": "lv:trans",
		"body": [
			"{{ trans('$1') }}$2"
		],
		"description": "Laravel String-trans"
	},

    // URLs

    "URL-action": {
		"prefix": "lv:action",
		"body": [
			"{{ action('${1:ControllerName}', [${2:'id'=>1}]) }}$3"
		],
		"description": "Laravel URL-action"
	},
    "URL-secure-asset": {
		"prefix": "lv:secure-asset",
		"body": [
			"{{ secure_asset('$1', ${2:\\$title}, ${3:\\$attributes=[]}) }}$4"
		],
		"description": "Laravel URL-secure-asset"
	},
    "URL-url": {
		"prefix": "lv:url",
		"body": [
			"{{ url('${1:url}', [$2]) }}$3"
		],
		"description": "Laravel URL-url"
	},
    "URL-asset": {
		"prefix": "lv:asset",
		"body": [
			"{{ asset('$1') }}$2"
		],
		"description": "Laravel URL-asset"
	},
    "URL-route": {
		"prefix": "lv:route",
		"body": [
			"{{ route('${1:routeName}', [${2:'id'=>1}]) }}$3"
		],
		"description": "Laravel URL-route"
	},

    // Miscellaneous

    "Form-csrf-field": {
        "prefix": "lv:csrf-field",
        "body": [
            "{{ csrf_field() }}$1"
        ],
        "description": "Laravel CSRF hidden field"
    },
    "csrf-token": {
        "prefix": "lv:csrf-token",
        "body": [
            "{{ csrf_token() }}$1"
        ],
        "description": "Laravel CSRF token"
    },

	// Paginate

	"Paginate-links": {
        "prefix": "lv:pagination-links",
        "body": [
            "{{ \\$${1:collection}->links() }}$2"
        ],
        "description": "Laravel pagination links"
    }
}
